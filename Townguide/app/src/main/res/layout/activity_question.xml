<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionActivity"
        android:backgroundTint="#80FFFFFF"
        android:backgroundTintMode="src_over">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="top|left"
            android:id="@+id/layoutQuestionMain">
        <TextView
                android:text="NA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuestion"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF">

            <RadioGroup
                    android:id="@+id/rdgChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbAns0"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"/>
                <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbAns1"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"/>
                <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbAns2"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"/>
                <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbAns3"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"/>

            </RadioGroup>
        </FrameLayout>


        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvInPageResult"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF"/>

        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvInPageScore"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp" tools:ignore="MissingConstraints"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom">
                <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvInPageFeedback"
                        android:paddingTop="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:gravity="top|left"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:background="@android:color/white"
                android:backgroundTint="#80FFFFFF">
            <Button
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSubmitAnswer"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:fontFamily="sans-serif-black"
                    android:textSize="30sp"
                    android:gravity="center"/>
            <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNextQuestion"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:fontFamily="sans-serif-black"
                    android:textSize="30sp"
                    android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>